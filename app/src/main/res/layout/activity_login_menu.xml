<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#E0E0E0"

    tools:context="com.latte.oeuff.suicidepreventionapp.LoginMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:text="Welcome to Suicide Prevention App. Hope you long live with hapiness !"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please login "
        android:id="@+id/please"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/welcome" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook"
        android:src="@drawable/facebook"
        android:background="#E0E0E0"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gmail"
        android:src="@drawable/gmail"
        android:background="#E0E0E0"
        android:layout_alignTop="@+id/facebook"
        android:layout_toRightOf="@+id/create"
        android:layout_toEndOf="@+id/create"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:src="@drawable/login"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_below="@+id/please"
        android:layout_toLeftOf="@+id/create"
        android:layout_toStartOf="@+id/create" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:layout_marginTop="19dp"
        android:src="@drawable/create"
        android:background="#E0E0E0"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or Create an Account"
        android:id="@+id/textView2"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="url"

        android:id="@+id/ourwebsite"
        android:linksClickable="true"
        android:layout_weight="1"

        android:layout_marginTop="49dp"

        android:layout_below="@+id/create"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit our website"
        android:id="@+id/visit"
        android:layout_alignBottom="@+id/ourwebsite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />
</RelativeLayout>
