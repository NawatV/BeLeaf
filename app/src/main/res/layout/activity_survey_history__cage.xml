<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:context="com.latte.oeuff.suicidepreventionapp.SurveyHistory_Cage"
    android:background="@drawable/appbg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cage_icon"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cage questionaire History"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop ="15dp"/>
    </LinearLayout>

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/seesurveyhistory_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Cage questionaire history here..."
                android:textSize="15dp"
                android:id="@+id/seesurveyhistory_textview"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

