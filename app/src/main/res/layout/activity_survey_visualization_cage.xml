<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/sample_activity"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="280dp">

            <com.androidplot.pie.PieChart
                android:id="@+id/mySimplePieChart"
                androidPlot.title="Excessive drinking (specificity)"
                androidPlot.titleWidget.labelPaint.textSize="13dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/donutSizeSeekBar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="90"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"/>

                <TextView
                    android:id="@+id/donutSizeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="unknown"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="280dp">

            <com.androidplot.pie.PieChart
                android:id="@+id/mySimplePieChart2"
                androidPlot.title="Excessive drinking (sensitivity)"
                androidPlot.titleWidget.labelPaint.textSize="13dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/donutSizeSeekBar2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="90"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"/>

                <TextView
                    android:id="@+id/donutSizeTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="unknown"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="280dp">

            <com.androidplot.pie.PieChart
                android:id="@+id/mySimplePieChart3"
                androidPlot.title="Alcoholism (specificity)"
                androidPlot.titleWidget.labelPaint.textSize="13dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/donutSizeSeekBar3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="90"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"/>

                <TextView
                    android:id="@+id/donutSizeTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="unknown"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="280dp">

            <com.androidplot.pie.PieChart
                android:id="@+id/mySimplePieChart4"
                androidPlot.title="Alcoholism (sensitivity)"
                androidPlot.titleWidget.labelPaint.textSize="13dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/donutSizeSeekBar4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="90"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"/>

                <TextView
                    android:id="@+id/donutSizeTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="unknown"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>

