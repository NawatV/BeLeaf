            android:id="@+id/visualizationstatus_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="See 5 previous survey's scores..."
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            EditText android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Day in a week"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/dayinaweek_edittext" />
            EditText android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="DD"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/day_edittext" />
            EditText android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="MM"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/month_edittext" />
            EditText android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="YY"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/year_edittext" />
            EditText android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="XX:XX"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/time_edittext" />

