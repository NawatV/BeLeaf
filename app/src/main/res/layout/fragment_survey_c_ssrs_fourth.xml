<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.latte.oeuff.suicidepreventionapp.Survey_C_ssrs">

<LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C_ssrs"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1:Actual Attempt (COMING SOON)"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"/>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='vertical'
            android:checkableBehavior="single"
            android:id="@+id/sui_q1_group"
            android:layout_marginLeft="40dp">
        </RadioGroup>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q2: Has there been a time when you started to do something to end your life but someone or something stopped you before you actually did anything?"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:checkableBehavior="single"
            android:id="@+id/sui_q2_group"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/sui_q2_yes"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/sui_q2_no"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
        </RadioGroup>

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sui_q2_yes_total"
            android:hint="total # of interrupted"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sui_q2_yes_edittext"
        android:hint="Please describe"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q3: Has there been a time when you started to do something to try to end your life but you stopped yourself before you actually did anything?"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#000000" />

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:checkableBehavior="single"
            android:id="@+id/sui_q3_group"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/sui_q3_yes"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/sui_q3_no"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
        </RadioGroup>

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sui_q3_yes_total"
            android:hint="Total # of aborted or self-interrupted"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sui_q3_yes_edittext"
        android:hint="Please describe"
        android:textSize="18dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q4: Have you taken any steps towards making a suicide attempt or preparing to kill yourself (such as collecting pills, getting a gun, giving valuables away or writing a suicide note)?"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#000000" />

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:checkableBehavior="single"
            android:id="@+id/sui_q4_group"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/sui_q4_yes"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/sui_q4_no"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
        </RadioGroup>

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sui_q4_yes_total"
            android:hint="total # of interrupted"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sui_q4_yes_edittext"
        android:hint="Please describe"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status..."
        android:id="@+id/sendsurveystatus_textview"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <ImageButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sendsurveybtn_final"
        android:background="@color/ap_transparent"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/send_c_ssrs_btn_second"/>

</LinearLayout>

</ScrollView>