<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="#E0E0E0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.latte.oeuff.suicidepreventionapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="170dp">
        <ImageView
            android:id="@+id/slideShowImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/batman"/>
            <!--android:src="@drawable/demo_slide" />-->

    </LinearLayout>

        <GridLayout android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp">
            <ImageButton
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:text="add a shortcut here (1)"
                android:id="@+id/shortcut1"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/yourspace" />
            <ImageButton
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:text="add a shortcut here (2)"
                android:id="@+id/shortcut2"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/reminders" />
            <ImageButton
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:text="add a shortcut here (3)"
                android:id="@+id/shortcut3"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/resources" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:text="add a shortcut here (4)"
                android:id="@+id/shortcut4"
                android:layout_row="1"
                android:layout_column="1"
                android:src="@drawable/helpnearyou" />
        </GridLayout>



    <GridLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="0dp">
        <TextView
            android:id="@+id/locationtxtview"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Your location..."/>
        <TextView
            android:id="@+id/languagetxtview"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Your language..."
            android:layout_marginLeft="5dp"/>
    </GridLayout>

    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:text="Feeling Graph Visualization"
        android:layout_marginLeft="5dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/graphimagview"
            android:src="@drawable/feeling_graph"
            android:layout_marginRight="100dp"/>
    </LinearLayout>

</LinearLayout>
