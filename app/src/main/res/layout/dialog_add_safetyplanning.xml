<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.latte.oeuff.suicidepreventionapp.MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_addphoto_in_home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add a plan"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_weight="0.00"
            android:textColor="#ffffff"
            android:background="#FFCC00"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/squarebtn">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/title"
                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a topic here..."
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/squarebtn">

            <ImageView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/addsafetyplan"
                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a plan here..."
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/squarebtn"
                android:id="@+id/addplan_btn"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/squarebtn"
                android:id="@+id/cancelplan_btn"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>